<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    <section name="Hexa.Core.Settings" type="Hexa.Core.Settings, Hexa.Core" />
  </configSections>

  <connectionStrings>
    <add name="Core.Connection" connectionString="Data Source=.\sqlexpress;Initial Catalog=HexaCoreTest;Integrated Security=True"
        providerName="System.Data.SqlClient" />
  </connectionStrings>

  <log4net>
    <root>
      <level value="DEBUG" />
      <appender-ref ref="TraceAppender" />
    </root>

    <appender name="TraceAppender" type="log4net.Appender.TraceAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger %P{User} %P{UserAddress} %P{SessionID}- %message%newline" />
      </layout>
    </appender>
  </log4net>

  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <!--Needed cause of Fluent.NHibernate incompatibility-->
        <assemblyIdentity name="NHibernate" publicKeyToken="aa95f207798dfdb4"/>
        <bindingRedirect oldVersion="2.1.2.4000" newVersion="3.0.0.4000"/>
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
  
</configuration>